<% unless @user.blank? %>
<h1>Public Profile</h1>
<%= render 'user' %>
<% end %>

<%= render 'profile' unless @profile.blank? %>

<% unless @user.blank? || @questions.blank? %>
<h3><%= @questions.size %>  Questions Asked:</h3>
<%= render :partial => '/questions/question_light', :collection => @questions %>
<% end %>


<% unless @user.blank? || @topics.blank? %>
<h3><%= @user.username.capitalize %> is keen in <%=pluralize(@topics.size,'Topic')%> </h3>
<%= render :partial => '/topics/topic', :collection => @topics %>
<% end %>



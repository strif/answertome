<%= div_for question do %>
<div class="answercontainer">

		<div class="answer_circle">			
		<p><%= question.answers_count unless question.answers_count.blank? %></p>
		</div>

	
	<div class="question_title">
		<h2><%=  link_to_unless_current h(question.title), question %></h2>
	</div>
 
	<div class="question_description">
		<%=   h(question.body)  %>
	</div>
	
	<div class="question_date">
		<%=  time_ago_in_words(question.created_at)  %> ago
	</div>
</div>
<% end %>

<div class="clear"></div>